@model IEnumerable<UserModel>

@{
}
<style>
    .table {
        overflow-x: scroll;
        position: absolute;
        top: 10px;
        bottom: 0;
    }
</style>

@if (Model != null && Model.Count() > 0)
{
<div>
    <table class="table table-responsive table-hover">
        <thead style="position:sticky; top:0px;" class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email</th>
                <th scope="col">Permissions</th>
                <th scope="col">CreatedBy</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
            <tr>
                <th scope="row">@user.ID</th>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.Permissions</td>
                <td>@user.CreatedBy</td>

                <td>
                    <a href="https://@Context.Request.Host/AppAdministration/ViewUser?UserId=@user.ID">View</a>
                    <a href="https://@Context.Request.Host/AppAdministration/EditUserForm?UserId=@user.ID">Edit</a>
                    <a href="https://@Context.Request.Host/AppAdministration/DeleteUser?UserId=@user.ID">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
}